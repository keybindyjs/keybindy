{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src"]
}
